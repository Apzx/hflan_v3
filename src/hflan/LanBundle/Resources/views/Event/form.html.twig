
<form method="post" class="form-hz" novalidate>
    <div class="panel">
        <h2>Général</h2>
        {{ form_row(form.name) }}
        {{ form_row(form.price) }}
    </div>

    <div class="panel">
        <h2>Dates</h2>
        {{ form_row(form.beginAt) }}
        {{ form_row(form.endAt) }}
        {{ form_row(form.datesVisible) }}
    </div>

    <div class="panel">
        <h2>Inscriptions</h2>
        {{ form_rest(form) }}
    </div>

    <div class="form-actions">
        <button type="submit" class="btn">
            <i class="icon-ok"></i> Enregistrer
        </button>
        <a href="{{ path('hflan_event_admin') }}" class="btn">
            <i class="icon-reply"></i> Annuler
        </a>
    </div>
</form>
<div class="control-group">
    <label class="control-label required">__name__label__</label>

    <div class="controls">
        <div id="hflan_lanbundle_tournament_extraFields___name__">
            <div class="control-group">
                <label class="control-label required"
                       for="hflan_lanbundle_tournament_extraFields___name___name">Name</label>

                <div class="controls">
                    <input type="text" id="hflan_lanbundle_tournament_extraFields___name___name"
                           name="hflan_lanbundle_tournament[extraFields][__name__][name]" required="required"
                           maxlength="255"/>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label required" for="hflan_lanbundle_tournament_extraFields___name___placeholder">Placeholder</label>

                <div class="controls">
                    <input type="text"
                           id="hflan_lanbundle_tournament_extraFields___name___placeholder"
                           name="hflan_lanbundle_tournament[extraFields][__name__][placeholder]"
                           required="required" maxlength="255"/>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label required"
                       for="hflan_lanbundle_tournament_extraFields___name___validator">Validator</label>

                <div class="controls">
                    <input type="text" id="hflan_lanbundle_tournament_extraFields___name___validator"
                           name="hflan_lanbundle_tournament[extraFields][__name__][validator]"
                           required="required" maxlength="255"/>
                </div>
            </div>
        </div>
    </div>
</div>