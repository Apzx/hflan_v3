{% extends '::base.html.twig' %}

{% block body %}
    <h1>Liste des évènements</h1>

    <a href="{{ path('hflan_event_new') }}" class="btn">
        <i class="icon-plus"></i> Nouveau
    </a>
    <hr>

    {% for event in events %}
        <div class="panel">
            <h2>
                {{ event.name }}
                <small>
                    {{ event.price }} €
                    <hr>
                    <i class="icon-edit"></i>
                    {{ event.registrationOpenAt|date('d-m-Y') }}
                    <i class="icon-caret-right" style="margin: 0 5px"></i>
                    {{ event.registrationCloseAt|date('d-m-Y') }}
                    <hr>
                    <i class="icon-trophy"></i>
                    {{ event.beginAt|date('d-m-Y') }}
                    <i class="icon-caret-right" style="margin: 0 5px"></i>
                    {{ event.endAt|date('d-m-Y') }}
                    <div class="pull-right">
                        <a href="{{ path('hflan_event_edit', {slug: event.slug}) }}">
                            <i class="icon-pencil"></i>
                        </a>
                    </div>
                </small>
            </h2>

            {% if event.tournaments|length > 0 %}
                <table class="table" style="margin-bottom: 15px">
                    <tr>
                        <th>Jeu</th>
                        <th>Type de jeu</th>
                        <th>Prix</th>
                        <th>Prize-Pool</th>
                        <th>Pré-inscriptions</th>
                        <th>En attente</th>
                        <th colspan="2">Equipes</th>
                        <th></th>
                    </tr>
                    {% for tournament in event.tournaments %}
                        <tr data-href="">
                            <td>{{ tournament.game }}</td>
                            <td>{{ tournament.gameType }}</td>
                            <td>{{ tournament.price }} €</td>
                            <td>{{ tournament.prizePool }} €</td>
                            <td>0</td>
                            <td>0</td>
                            <td style="padding-right: 0">
                                0
                            </td>
                            <td style="padding-left: 0">
                                / {{ tournament.numberOfTeams }}
                            </td>
                            <td>
                                <a href="{{ path('hflan_tournament_edit', {slug:tournament.slug}) }}">
                                    <i class="icon-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            {% endif %}

            <a class="btn" href="{{ path('hflan_tournament_new', {slug:event.slug}) }}">
                <i class="icon-plus"></i>
                Ajouter un tournoi
            </a>
        </div>
    {% endfor %}
{% endblock %}
