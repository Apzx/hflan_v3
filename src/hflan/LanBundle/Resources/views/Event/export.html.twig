{% extends '::base.html.twig' %}

{% block body %}
    <h1>
        Mailing list
        <small>{{ event.name }}</small>
    </h1>

    <form method="post" class="form-hz" novalidate>

        {{ form_widget(form) }}

        <div class="form-actions">
            <button type="submit" class="btn">
                <i class="fa fa-cogs"></i> Générer !
            </button>
            <a href="{{ path('hflan_event_admin') }}" class="btn">
                <i class="fa fa-reply"></i> Annuler
            </a>
        </div>
    </form>

    {% if emails is not null %}
        {% if emails is empty %}
            <p class="flash flash-error">Aucun résultat</p>
        {% else %}
            </section><section>
            <h1 class="header">
                Résultat de la recherche
            </h1>
            {{ count }} résultats
            <textarea class="auto-select input-block">{{ emails }}</textarea>
        {% endif %}
    {% endif %}
{% endblock %}
