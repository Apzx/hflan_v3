{% extends '::base.html.twig' %}
{% import "hflanLanBundle:Modules:registrationProcess.html.twig" as process %}

{% block body %}
    <h1 class="header">
        Inscription au {{ tournament.name }}
        <small>
            {{ tournament.prizePool }} € de Prize-Pool
        </small>
    </h1>
    <table class="table table-total">
        <tr>
            <th>Article</th>
            <th>Prix</th>
            <th>Quantité</th>
        </tr>
        <tr>
            <td class="toggle">
                Billet d'entré pour la {{ tournament.event.name }}
                <input type="checkbox" id="admission" />
                <label for="admission">
                    <div class="active">
                        <i class="icon-minus-sign"></i>
                    </div>
                    <div class="inactive">
                        <i class="icon-plus-sign"></i>
                    </div>
                </label>
                <div class="toggle-content" style="margin-top: 10px;color: #7c7c7c">
                    {{ renderBlock('order_entrance')|stripHTML }}
                </div>
            </td>
            <td>
                {{ tournament.event.price }}.00
                €
            </td>
            <td>
                {{ tournament.numberOfPlayerPerTeam }}
            </td>
        </tr>
        <tr>
            <td class="toggle">
                Participation au {{ tournament.name }} ({{ tournament.gameType }})
                <input type="checkbox" id="tournament" />
                <label for="tournament">
                    <div class="active">
                        <i class="icon-minus-sign"></i>
                    </div>
                    <div class="inactive">
                        <i class="icon-plus-sign"></i>
                    </div>
                </label>
                <div class="toggle-content" style="margin-top: 10px;color: #7c7c7c">
                    {{ renderBlock('order_tournament')|stripHTML }}
                </div>
            </td>
            <td>
                {{ tournament.price }}.00
                €
            </td>
            <td>
                {{ tournament.numberOfPlayerPerTeam }}
            </td>
        </tr>
        <tr>
            <td>
                Total
            </td>
            <td>
                {{ tournament.totalPrice }}.00&nbsp;€
            </td>
            <td></td>
        </tr>
    </table>
    </section><section>

    {{ process.show(team, "hz") }}

    {% block content %}{% endblock %}
{% endblock %}
