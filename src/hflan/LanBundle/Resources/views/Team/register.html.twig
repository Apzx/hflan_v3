{% extends '::base.html.twig' %}

{% block body %}
    {% embed 'hflanLanBundle:Modules:nextEventState.html.twig' %}

        {% block eventHidden %}
            <h1 class="header">Inscriptions</h1>
            <p>Aucune LAN n'est pr√©vu pour le moment.</p>
        {% endblock %}

        {% block registrationDateHidden %}
            <h1 class="header">Inscriptions</h1>
            {{ parent() }}
        {% endblock %}

        {% block registrationNotOpenYet %}
            <h1 class="header">Inscriptions</h1>
            {{ parent() }}
