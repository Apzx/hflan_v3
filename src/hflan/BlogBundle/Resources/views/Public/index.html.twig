{% extends '::base.html.twig' %}

{% block body %}
    <h1 class="header">
        {{ "blog.title"|trans({}, "blog")|desc("Titre principale de la page blog") }}
    </h1>

    {% for article in pagination %}
        <div class="row row-gaped">
            <div class="col3">
                <a class="article-image" style="background-image: url({{ asset(article.webPath) }})" href="{{ path('hflan_blog_show', {slug:article.slug}) }}">
                    <i class="fa fa-eye"></i>
                </a>
            </div>
            <div class="col9">
                <h2><a href="{{ path('hflan_blog_show', {slug:article.slug}) }}">{{ article.title }}</a></h2>
                <span class="note">Le {{ article.createdAt|simpleDate }}</span>
                <p>{{ article.content|stripHTML(250) }}</p>
            </div>
        </div>
        <hr>
    {% endfor %}

    {{ knp_pagination_render(pagination) }}
{% endblock %}
